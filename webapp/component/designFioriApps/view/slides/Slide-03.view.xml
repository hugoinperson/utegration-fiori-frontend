<mvc:View
	controllerName="utegration.fiori.frontend.component.designFioriApps.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="50%"
			direction="Column"
			alignItems="Begin"
			justifyContent="Center">
			<utg:FormatText
				level="H2">
				<m:Text text="example"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="50%"
			direction="Column"
			class="sapUiMediumMarginTop"
			alignItems="Start"
			justifyContent="Center">
			<utg:FormatText order="1" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- An approval app"/>
			</utg:FormatText>
			<utg:FormatText order="2" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- It handles different kinds of requests like:"/>
			</utg:FormatText>
			<utg:FormatText order="3" level="Normal" class="sapUiTinyMarginTopBottom sapUiMediumMarginBegin">
				<m:Text text="• time"/>
			</utg:FormatText>
			<utg:FormatText order="4" level="Normal" class="sapUiTinyMarginTopBottom sapUiMediumMarginBegin">
				<m:Text text="• expense"/>
			</utg:FormatText>
			<utg:FormatText order="5" level="Normal" class="sapUiTinyMarginTopBottom sapUiMediumMarginBegin">
				<m:Text text="• SAP system access"/>
			</utg:FormatText>
			<utg:FormatText order="6" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- Each kind of approval request requires different user permission"/>
			</utg:FormatText>
		</utg:AnimateBox>
	
	</utg:AnimateBox>

</mvc:View>