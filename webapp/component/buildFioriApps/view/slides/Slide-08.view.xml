<mvc:View
	controllerName="utegration.fiori.frontend.component.buildFioriApps.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			class="sapUiLargeMarginBottom"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<utg:FormatText level="H2">
				<m:Text text="OData Annotation example"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="80%"
			direction="Row"
			alignItems="Center"
			justifyContent="Center">
			<m:Image densityAware="false" src="img/annotation-example-img.png" class="utg-fiori-imageSizeTiny sapUiMediumMarginEnd"/>
			<m:Image densityAware="false" src="img/annotation-example-code.png" class="utg-fiori-imageSizeLarge"/>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="80%"
			order="1"
			class="sapUiLargeMarginTop"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<utg:FormatText level="H3">
				<m:Text text="OData metadata (definition of Entity Sets and their associations + Annotation)"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
	
	</utg:AnimateBox>

</mvc:View>