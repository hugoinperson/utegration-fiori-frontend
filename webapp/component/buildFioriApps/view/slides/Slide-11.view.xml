<mvc:View
	controllerName="utegration.fiori.frontend.component.buildFioriApps.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<utg:FormatText level="H2" class="sapUiMediumMarginBottom">
				<m:Text text="UI5 controls"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="80%"
			direction="Row"
			alignItems="Center"
			justifyContent="Center">
		
			<utg:AnimateBox
				order="1"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H2">
					<utg:AnimateStrokeText showStroke="true" text="normal controls" />
				</utg:FormatText>
				<utg:FormatText level="H3" order="3">
					<m:Text text="requires front-end coding" />
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H2">
					<utg:Text text="vs."/>
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="2"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H2">
					<utg:AnimateStrokeText showStroke="true" text="smart controls" />
				</utg:FormatText>
				<utg:FormatText level="H3" order="4">
					<m:Text text="configured by annotation" />
				</utg:FormatText>
			</utg:AnimateBox>
			
		</utg:AnimateBox>
		
	</utg:AnimateBox>

</mvc:View>