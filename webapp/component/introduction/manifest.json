{
    "_version": "1.1.0",
    "sap.app": {
	    "_version": "1.1.0",
	    "id": "utegration.fiori.frontend.component.introduction",
        "type": "component",
        "i18n": "i18n/i18n.properties",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}"
    },

    "sap.ui": {
	    "_version": "1.1.0",
	    "technology": "UI5",
	    "deviceTypes": {
            "desktop": true,
	        "tablet": true,
            "phone": true
        },
        "supportedThemes": [
            "sap_belize"
        ]
    },

    "sap.ui5": {
        "_version": "1.1.0",
        "dependencies": {
            "minUI5Version": "1.40",
            "libs": {
                "sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
            }
        },
        "contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
		            "bundleName": "utegration.fiori.frontend.component.introduction.i18n.i18n"
                }
            }
        },
        "resources": {
            "css": [{  
            	"uri": "./css/style.css"
            }]
        },
        "rootView": {
			"viewName": "utegration.fiori.frontend.component.introduction.view.Index",
			"type": "XML"
		},
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "async": true,
                "viewType": "XML",
                "viewPath": "utegration.fiori.frontend.component.introduction.view",
                "controlId": "indexApp",
                "controlAggregation": "pages",
                "transition": "slide"
            },
            "routes": [
            	{
            		"name": "main",
                    "pattern": "introduction",
                    "target": "main"
                }
            ],
            "targets": {
                "main": {
                    "viewName": "Main"
                }
            }
        }
    }
}
