<mvc:View
	controllerName="utegration.fiori.frontend.component.introduction.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">

	<!--Base-->
	<utg:AnimateVBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateVBox
			height="100%"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<utg:FormatText
				level="H2">
				<m:Text text="Fiori 2.0 is a new"/>
				<utg:AnimateStrokeText order="1" text="design guideline"/>
				<m:Text text="from SAP guiding development for applications"/>
			</utg:FormatText>
		</utg:AnimateVBox>
	
	</utg:AnimateVBox>

</mvc:View>