<mvc:View
	controllerName="utegration.fiori.frontend.component.introduction.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<m:Image src="img/cow-dolphin-duck.png" class="utg-fiori-imageSizeSmall"/>
			<utg:FormatText level="H2" class="sapUiLargeMarginTop">
				<m:Text text="“If It Looks Like a Cow, Swims Like a Dolphin and Quacks Like a Duck, It Must Be Enterprise Software.”"/>
			</utg:FormatText>
		</utg:AnimateBox>
	
	</utg:AnimateBox>

</mvc:View>