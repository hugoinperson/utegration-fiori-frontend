<mvc:View
	controllerName="utegration.fiori.frontend.component.introduction.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			class="sapUiLargeMarginBottom"
			direction="Column"
			alignItems="Center"
			justifyContent="Center">
			<utg:FormatText level="H1">
				<m:Text text="Fiori design principles"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="80%"
			direction="Row"
			alignItems="Center"
			justifyContent="Center">
		
			<utg:AnimateBox
				order="1"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<m:Image densityAware="false" src="img/principle-role-based.png" class="utg-fiori-imageSizeMini sapUiTinyMarginBottom"/>
				<utg:FormatText level="Normal">
					<m:Text text="ROLE-BASED" />
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="2"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<m:Image densityAware="false" src="img/principle-adaptive.png" class="utg-fiori-imageSizeMini sapUiTinyMarginBottom"/>
				<utg:FormatText level="Normal">
					<m:Text text="ADAPTIVE" />
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="3"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<m:Image densityAware="false" src="img/principle-coherent.png" class="utg-fiori-imageSizeMini sapUiTinyMarginBottom"/>
				<utg:FormatText level="Normal">
					<m:Text text="COHERENT" />
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="4"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<m:Image densityAware="false" src="img/principle-simple.png" class="utg-fiori-imageSizeMini sapUiTinyMarginBottom"/>
				<utg:FormatText level="Normal">
					<m:Text text="SIMPLE" />
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="5"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<m:Image densityAware="false" src="img/principle-delightful.png" class="utg-fiori-imageSizeMini sapUiTinyMarginBottom"/>
				<utg:FormatText level="Normal">
					<m:Text text="DELIGHTFUL" />
				</utg:FormatText>
			</utg:AnimateBox>
			
		</utg:AnimateBox>
	
	</utg:AnimateBox>

</mvc:View>