<mvc:View
	controllerName="utegration.fiori.frontend.component.introduction.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			direction="Column"
			alignItems="Begin"
			justifyContent="Center">
			<utg:FormatText level="H2">
				<m:Text text="Today, we will talk about:"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="80%"
			direction="Column"
			class="sapUiMediumMarginTop"
			alignItems="Start"
			justifyContent="Center">
			<utg:FormatText order="1" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- Very brief introduction on SAP Fiori 2.0"/>
			</utg:FormatText>
			<utg:FormatText order="2" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- Fiori 2.0 design priciples"/>
			</utg:FormatText>
			<utg:FormatText order="3" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- How to design an app with Fiori 2.0 design priciples"/>
			</utg:FormatText>
			<utg:FormatText order="4" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- Fiori app development and toolings"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
	</utg:AnimateBox>

</mvc:View>