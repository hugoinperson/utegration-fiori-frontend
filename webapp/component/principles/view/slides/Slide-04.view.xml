<mvc:View
	controllerName="utegration.fiori.frontend.component.principles.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">

	<!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="80%"
			direction="Row"
			alignItems="Center"
			justifyContent="Center">
			
			<utg:AnimateBox
				order="1"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H1">
					<m:Text text="ABAP"/>
				</utg:FormatText>
				<utg:FormatText level="H2" order="2">
					<utg:AnimateStrokeText showStroke="true" text="Document-based"/>
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H1">
					<m:Text text="vs."/>
				</utg:FormatText>
			</utg:AnimateBox>
			
			<utg:AnimateBox
				order="3"
				direction="Column"
				alignItems="Center"
				justifyContent="Center">
				<utg:FormatText level="H1">
					<m:Text text="Fiori"/>
				</utg:FormatText>
				<utg:FormatText level="H2" order="4">
					<utg:AnimateStrokeText showStroke="true" text="Role-based"/>
				</utg:FormatText>
			</utg:AnimateBox>
			
			
			
		</utg:AnimateBox>
		
	
	</utg:AnimateBox>

</mvc:View>