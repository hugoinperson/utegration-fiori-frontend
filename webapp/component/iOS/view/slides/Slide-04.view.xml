<mvc:View
	controllerName="utegration.fiori.frontend.component.iOS.controller.BasicSlide"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:utg="utegration.fiori.frontend.control"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true"
    height="100%">
    
    <!--Base-->
	<utg:AnimateBox
		height="100%"
		direction="Column"
		alignItems="Center"
		justifyContent="Center">
		
		<utg:AnimateBox
			width="60%"
			direction="Column"
			alignItems="Begin"
			justifyContent="Center">
			<utg:FormatText
				level="H2">
				<m:Text text="Since Fiori design is responsive, can’t I just run my Fiori apps on mobile browsers?"/>
			</utg:FormatText>
		</utg:AnimateBox>
		
		<utg:AnimateBox
			width="60%"
			direction="Column"
			class="sapUiMediumMarginTopBottom"
			alignItems="Start"
			justifyContent="Center">
			<utg:FormatText order="1" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- poor performance compared with native app 👎🏻"/>
			</utg:FormatText>
			<utg:FormatText order="2" level="Normal" class="sapUiTinyMarginTopBottom">
				<m:Text text="- original Fiori design doesn't fit Apple's design language 🙅🏻‍♂️"/>
			</utg:FormatText>
		</utg:AnimateBox>
	
	</utg:AnimateBox>

</mvc:View>